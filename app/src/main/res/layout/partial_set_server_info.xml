<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/partial_set_server_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:visibility="gone"
    android:background="#BF000000"
    android:gravity="center">
    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/xml_b0_r5_white_layout">
        <EditText
            android:id="@+id/partial_set_server_info_ip"
            android:text="inside-dev.gigagenie.ai"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="serverIP"/>
        <EditText
            android:id="@+id/partial_set_server_info_grpc_port"
            android:text="50109"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="grpcPort"/>
        <EditText
            android:id="@+id/partial_set_server_info_rest_port"
            android:text="30109"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="restPort"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/partial_set_server_info_cancel"
                android:text="취소"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/partial_set_server_info_confirm"
                android:text="확인"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>